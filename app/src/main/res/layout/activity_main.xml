<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#e4c0a8"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/txt_api"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THE DOG API"
        android:textSize="40sp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/dogImageView"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/txt_api"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_background"
        app:layout_constraintHorizontal_bias="0.5" />
    <View
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/dogImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_background"/>

    <TextView
        android:id="@+id/dogNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dog Name"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/dogImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />
    <TextView
        android:id="@+id/breedNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breed"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="65dp"
        app:layout_constraintTop_toBottomOf="@id/dogNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />
    <TextView
        android:id="@+id/breedGroupTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breed Group"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="170dp"
        app:layout_constraintTop_toBottomOf="@id/breedNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/lifeSpanTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life Span"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="145dp"
        app:layout_constraintTop_toBottomOf="@id/breedGroupTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />
    <TextView
        android:id="@+id/temperamentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperament"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/lifeSpanTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10121075-Wildan Permana-PemAndro3"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
